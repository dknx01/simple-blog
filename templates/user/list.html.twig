{% extends 'layout/conatiner_fluid.html.twig' %}

{% block title %}{{ name }}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {{ 'pages.user.overview'|trans }}
        <ul class="list-group">
            {% for user in users %}
                <a href="{{ path('user_edit', {id: user.id}) }}" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
                    {{ user.username }}
                    <div>
                        <span class="badge badge-primary badge-pill">{{ user.roles|join(', ') }}</span>
                    </div>

                </a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
