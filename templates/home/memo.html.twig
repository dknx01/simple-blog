{% extends 'layout/base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}

        <div class="container-fluid">
                <div class="row mb-2 mb-xl-3" style="text-align: center;display: block;">
                        <div class="col-auto d-none d-sm-block">
                                <h1 class="mt-4">Memo</h1>
                        </div>
                </div>
                <div class="row">
                        <div class="col-xl-2"></div>
                        <div class="col-xl-8">
                                <div class="card mb-4">
                                {% if content.type is constant('App\\Entity\\MemoContent::PDF') %}
                                        <style>
                                                .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
                                                .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
                                        </style>

                                        <div class="example-wrapper">
                                                <embed src="{{ path('file', {path: content.path|url_encode}) }}" type="application/pdf" width="100%" height="1024px" />
                                        </div>
                                {% else %}
                                        <div class="card-header">
                                                {{ content.path }}
                                        </div>
                                        <div class="card-body">
                                                {{ content.content|raw }}
                                        </div>
                                {% endif %}
                                </div>
                        </div>
                        <div class="col-xl-2"></div>
                </div>
        </div>

{% endblock %}
